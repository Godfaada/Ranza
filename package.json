{
  "name": "ranza",
  "version": "0.1.0",
  "private": true,
  "description": "Ranza â€“ Ghana carpooling web + mobile app (monorepo)",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.7.0",
  "scripts": {
    "dev": "concurrently -n web,api,mobile -c blue,green,magenta \"pnpm -C packages/web dev\" \"pnpm -C packages/api start:dev\" \"pnpm -C packages/mobile dev\"",
    "dev:web": "pnpm -C packages/web dev",
    "dev:api": "pnpm -C packages/api start:dev",
    "dev:mobile": "pnpm -C packages/mobile dev",
    "build": "echo 'Use package builds: web/api/mobile' && exit 0",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "pnpm -C packages/api test",
    "ci": "pnpm -C packages/api test",
    "prepare": "husky install",
    "postinstall": "turbo prune --scope=@ranza/api --scope=@ranza/web --scope=@ranza/mobile --docker || echo 'turbo optional'"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "concurrently": "^9.0.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,css}": [
      "prettier --write"
    ]
  }
}

